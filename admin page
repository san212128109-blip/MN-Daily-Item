</footer>

<script>
  // Admin credentials
  const adminUser = "admin";
  const adminPass = "nafis128!@*";

  // Default products
  const defaultProducts = [
    {id: 1, name: "পণ্য ১", price: 100},
    {id: 2, name: "পণ্য ২", price: 200},
    {id: 3, name: "পণ্য ৩", price: 300},
  ];

  // Load products from LocalStorage or use default
  let products = JSON.parse(localStorage.getItem('products')) || defaultProducts;

  function login() {
    const role = document.getElementById('role').value;
    const user = document.getElementById('username').value;
    const pass = document.getElementById('password').value;
    const msg = document.getElementById('loginMessage');

    if(role === "admin") {
      if(user === adminUser && pass === adminPass){
        document.getElementById('loginContainer').style.display = 'none';
        document.getElementById('userPanel').style.display = 'block';
        showProducts(true);
      } else {
        msg.innerText = "Username বা Password ভুল!";
        msg.style.color = 'red';
      }
    } else {
      document.getElementById('loginContainer').style.display = 'none';
      document.getElementById('userPanel').style.display = 'block';
      showProducts(false);
    }
  }

  function showProducts(isAdmin) {
    let html = '';
    products.forEach(p => {
      html += `<div class="product">
        Name: <input id="name-${p.id}" value="${p.name}" ${isAdmin ? '' : 'disabled'}>
        Price: <input id="price-${p.id}" value="${p.price}" ${isAdmin ? '' : 'disabled'}>`;
      if(isAdmin) {
        html += `<button onclick="updateProduct(${p.id})">Update</button>`;
      }
      html += `</div>`;
    });
    document.getElementById('products').innerHTML = html;
  }

  function updateProduct(id) {
    const name = document.getElementById(`name-${id}`).value;
    const price = document.getElementById(`price-${id}`).value;
    const product = products.find(p => p.id === id);
    product.name = name;
    product.price = price;

    localStorage.setItem('products', JSON.stringify(products));
    alert(`Product updated! ✅\nName: ${name}\nPrice: ${price}`);
  }

  function searchProducts() {
    const term = document.getElementById('searchBox').value.toLowerCase();
    const filtered = products.filter(p => p.name.toLowerCase().includes(term));
    let html = '';
    filtered.forEach(p => {
      html += `<div class="product">
        Name: <input id="name-${p.id}" value="${p.name}" disabled>
        Price: <input id="price-${p.id}" value="${p.price}" disabled>
      </div>`;
    });
    document.getElementById('products').innerHTML = html;
  }
</script>

</body>
